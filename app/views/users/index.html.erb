

<%= link_to "Create New User" , new_user_path , class: "button success"%>
<br><br><br>

<h1>All Users</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Confirmed?</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name%></td>
    <td><%= user.email %></td>
    <td style="text-align:center;"><%= user.is_admin %></td>
    <td style="text-align:center;">
      <% if user.confirmed_user == true %>
      <%= user.confirmed_user %>
      <%else%>
      <div style="float:none;" class="danger"><%= user.confirmed_user  %></div>
      <%end%>
    </td>
    <td>
      <%#= link_to 'Show', user %>
      <%= link_to "Edit", edit_user_path(user) , class: "button success"%>
      <%= button_tag 'Destroy', class: "button alert delete" , :id => "del-#{user.id}"  if current_user.is_admin %>
      <%= link_to 'Are You Sure?', user, method: :delete, class: "button danger hidden" , :id => "delete-#{user.id}" if current_user.is_admin %>
      <br>
    </td>
  </tr>

<% end %>
</table>

<br />


